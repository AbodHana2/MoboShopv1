                </form>*@
            </div>
        </div>
        <partial name="_LoginPartial" />
    </nav>
    <div calss="container">
        @RenderBody()
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - MoboShopv1 - <a asp-area="" asp-controller="Home" asp-action=""></a>
        </div>
    </footer>
